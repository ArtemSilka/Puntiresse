<!DOCTYPE html>
<html>
  <head>
    <title>Puntiresse</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <% if current_user %>
      <script>
        window.currentUser = {
          "id": <%= current_user.id %>,
          "email": "<%= current_user.email %>"
        };
      </script>
    <% end %>

    <script type="text/javascript">
      window.logoURL = "<%= image_url('puntiresse_logo.png') %>";
      window.glassURL = "<%= image_url('search-solid.svg') %>";
      window.profileURL = "<%= image_url('profile.png') %>";
      window.profile2URL = "<%= image_url('profile2.svg') %>";
      window.dropdownURL = "<%= image_url('dropdown.svg') %>";
    </script>
    
  </head>

  <body>
    <%= yield %>
  </body>
</html>
