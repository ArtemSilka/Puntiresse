<!DOCTYPE html>
<html>
  <head>
    <title>Puntiresse</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <meta property="og:image" content="https://i.imgur.com/dBsjYm8.png"/>
    <meta property="og:description" content="Puntiresse is single page application inspired by Pinterest."/>

    <link rel="icon" href="<%= image_url('favicon.png') %>" type="image/x-icon">

    <% if current_user %>
      <script>
        window.currentUser = {
          "id": <%= current_user.id %>,
          "email": "<%= current_user.email %>"
        };
      </script>
    <% end %>

    <script type="text/javascript">
      window.privet = "<%= image_url('privet.png') %>";

      window.t1 = "<%= image_url('t1.jpg') %>";
      window.t2 = "<%= image_url('t2.jpg') %>";
      window.t3 = "<%= image_url('t3.jpg') %>";
      window.t4 = "<%= image_url('t4.jpg') %>";
      window.t5 = "<%= image_url('t5.jpg') %>";
      window.t6 = "<%= image_url('t6.jpg') %>";
      window.t7 = "<%= image_url('t7.jpg') %>";
      window.t8 = "<%= image_url('t8.jpg') %>";
      window.t9 = "<%= image_url('t9.jpg') %>";
      window.t10 = "<%= image_url('t10.jpg') %>";
      window.t11 = "<%= image_url('t11.jpg') %>";
      window.t12 = "<%= image_url('t12.jpg') %>";
      window.t13 = "<%= image_url('t13.jpg') %>";

    </script>
    
  </head>

  <body>
    <%= yield %>
  </body>
</html>
