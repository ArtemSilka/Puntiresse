<!DOCTYPE html>
<html>
  <head>
    <title>Puntiresse</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <meta property="og:image" content="https://i.imgur.com/gbhgMNo.png"/>
    <meta property="og:description" content="Puntiresse is single page application inspired by Pinterest."/>

    <link rel="icon" href="<%= image_url('favicon.png') %>" type="image/x-icon">

    <% if current_user %>
      <script>
        window.currentUser = {
          "id": <%= current_user.id %>,
          "email": "<%= current_user.email %>"
        };
      </script>
    <% end %>

    <script type="text/javascript">
  

    </script>
    
  </head>

  <body>
    <%= yield %>
  </body>
</html>
