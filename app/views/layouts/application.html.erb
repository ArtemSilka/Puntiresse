<!DOCTYPE html>
<html>
  <head>
    <title>Puntiresse</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <meta property="og:image" content="https://i.imgur.com/gbhgMNo.png"/>
    <meta property="og:description" content="Puntiresse is single page application inspired by Pinterest."/>

    <link rel="icon" href="<%= image_url('favicon.png') %>" type="image/x-icon">

    <% if current_user %>
      <script>
        window.currentUser = {
          "id": <%= current_user.id %>,
          "email": "<%= current_user.email %>"
        };
      </script>
    <% end %>

    <script type="text/javascript">
      window.logoURL = "<%= image_url('puntiresse_logo.png') %>";
      window.profileURL = "<%= image_url('profile.png') %>";
      window.profile2URL = "<%= image_url('profile2.svg') %>";
      window.dropdownURL = "<%= image_url('dropdown.svg') %>";
      window.googleURL = "<%= image_url('google.svg') %>";
      window.facebookURL = "<%= image_url('facebook.svg') %>";
      window.xURL = "<%= image_url('x.svg') %>";

      window.privet = "<%= image_url('privet.png') %>";
      window.findHere = "<%= image_url('findHere.png') %>";

    </script>
    
  </head>

  <body>
    <%= yield %>
  </body>
</html>
